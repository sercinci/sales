{% extends "AppBundle::layout.html.twig" %}

{% block title %} 
Cart
{% endblock %}

{% block content %}
	{{ parent() }}
	<blockquote>
	<dl>
		{% for product in cart %}
		<dt>{{ product.getName() }}:</dt>
		<dd>{{ product.getFullPrice() | number_format(2)}} €</dd>
		{% endfor %}
		<hr>
		<dt>Sales Taxes:</dt>
		<dd>{{ salesTaxes | number_format(2) }} €</dd>
		<dt>Total:</dt>
		<dd>{{ total | number_format(2) }} €</dd>
	</dl>
	</blockquote>
{% endblock %}